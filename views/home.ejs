<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/css/home.css">
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<div id="home-main">
    <h1>CSV Upload System</h1>
    <div id="uploads-container">
        <form action="/uploads/csv" method="POST" enctype="multipart/form-data">
            <input type="file" name="data-file">
            <input type="submit" name="submit" placeholder="Csv File">
            <input id="search-box" type="text" name="search" placeholder="Search...">
        </form>
    </div>
    <div id="container">
        <div id="file-list-container">
            <% for(let i=0; i<files.length; i++) {%>
                    <div class="single-file-container" id="<%=i %>">
                        <div class="sno" id="<%= files[i].name %>"><%= (i+1) %>.</div>
                        <div class="filename"><%= files[i].name %></div> 
                    </div> 
               <%} 
            %>
            <div id="piechart"></div>
        </div>
        <div id="file-content-container">
        </div>
    </div>
</div>
<script src="/js/home.js" type="text/javascript"></script>
